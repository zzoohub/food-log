{
  "name": "food-log",
  "version": "1.0.0",
  "description": "AI-powered food diary application",
  "private": true,
  "workspaces": [
    "mobile",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:mobile\" \"npm run dev:server\"",
    "dev:mobile": "cd mobile && npm run start",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:mobile && npm run build:server",
    "build:mobile": "cd mobile && npm run build",
    "build:server": "cd server && npm run build",
    "start": "concurrently \"npm run start:mobile\" \"npm run start:server\"",
    "start:mobile": "cd mobile && npm run start",
    "start:server": "cd server && npm run start",
    "test": "npm run test:mobile && npm run test:server",
    "test:mobile": "cd mobile && npm run test",
    "test:server": "cd server && npm run test",
    "install:all": "npm install && cd mobile && npm install && cd ../server && npm install",
    "clean": "rm -rf node_modules mobile/node_modules server/node_modules",
    "reset": "npm run clean && npm run install:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}